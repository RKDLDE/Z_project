<!--        <ImageView-->
<!--            android:id="@+id/cameraBtn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:srcCompat="@drawable/cambtn"-->
<!--            android:gravity="center_horizontal|bottom"-->
<!--            android:layout_gravity="center_horizontal|bottom"-->
<!--            android:contentDescription="Captured Image"-->
<!--            android:layout_marginBottom="20dp" />-->

        <ImageView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/aa_img"
            android:contentDescription="@null"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/sss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/sss_img" />


    </FrameLayout>

    <ImageView
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_bg"
        app:srcCompat="@drawable/emoji"
        tools:layout_editor_absoluteX="165dp" />

    <ImageView
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clear"
        app:layout_constraintBottom_toTopOf="@+id/main_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="next_page"/>

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/okay"
        app:layout_constraintBottom_toTopOf="@+id/main_bg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="next_page"/>



</androidx.constraintlayout.widget.ConstraintLayout>