<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/chat_personal_list_user_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/chat_personal_list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도금"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/chat_personal_list_user_image"
        app:layout_constraintStart_toEndOf="@id/chat_personal_list_user_image"/>

    <TextView
        android:id="@+id/chat_personal_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginStart="22dp"
        app:layout_constraintTop_toBottomOf="@id/chat_personal_list_user_name"
        app:layout_constraintStart_toEndOf="@id/chat_personal_list_user_image"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_alarm_view"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_chat_alarm"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chat_alarm_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#C7C7C7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>