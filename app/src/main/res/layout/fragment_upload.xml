<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upload_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/imagePreview"
        android:layout_width="3500dp"
        android:layout_height="5000dp"
        android:background="@drawable/cam_bg_rec"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/cameraBtn"
            android:layout_width="739dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="400dp"
            app:srcCompat="@drawable/camerabtn" />

    </LinearLayout>





    <ImageButton
        android:id="@+id/downImg"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginRight="400dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toTopOf="@+id/imagePreview"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/img_download" />


</androidx.constraintlayout.widget.ConstraintLayout>