<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upload_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <FrameLayout
        android:id="@+id/imagePreview"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@drawable/cam_bg_rec"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="center_horizontal|bottom"
            android:contentDescription="카메라 열기"
            android:layout_marginBottom="30dp"

            app:srcCompat="@drawable/cambtn" />

        <ImageView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/aa_img"
            android:contentDescription="@null"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/sss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            app:srcCompat="@drawable/sss_img" />


    </FrameLayout>




    <ImageView
        android:id="@+id/downImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/imagePreview"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/down" />

    <ImageView
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePreview"
        app:srcCompat="@drawable/emoji"
        tools:layout_editor_absoluteX="165dp" />


</androidx.constraintlayout.widget.ConstraintLayout>